<style is:global>
  html,
  body {
    width: 100%;
    font-family: "Montserrat", sans-serif;
  }
  .source {
    position: absolute;
    bottom: 0;
    padding-bottom: 1%;
    padding-left: 10%;
    font-size: 12px;
  }

  .controls-arrow {
    background-color: white !important;
    border-radius: 100%;
    height: 3.9em !important;
    width: 3.9em !important;
    font-size: 0.5rem;
    &:after,
    &:before {
      top: 0.15em !important;
    }
  }
</style>
