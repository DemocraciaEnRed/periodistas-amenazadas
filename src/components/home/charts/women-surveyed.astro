<div id="circleGrach" style="width: 100%;height:600px;"></div>

<style></style>

<script>
  import * as echarts from "echarts";
  // Initialize the echarts instance based on the prepared dom
  let chartDom = document.getElementById("circleGrach");
  var myChart = echarts.init(chartDom);
  // Registrar el mapa en ECharts

  const options = {
    title: {
      text: "Número de mujeres encuestadas",
      subtext:
        "A continuación mostraremos algúnos datos recavados.....es un aproximado de lo que vamos a mostrar.",
      left: "right",
      textStyle: {
        fontFamily: "Poppins",
        fontSize: 48,
        fontWeight: "normal",
        color: "#000",
      },
      subtextStyle: {
        fontFamily: "Poppins",
        fontSize: 20,
        width: 20,
        fontWeight: "normal",
        color: "#000",
      },
    },

    tooltip: {
      trigger: "item",
    },
    legend: {
      orient: "horizontal",
      left: "50%",
      top: "50%",
      itemGap: 20,
      itemWidth: 100,
      itemHeight: 100,
      icon: "circle",
      formatter: " {name}",
      textStyle: {
        fontFamily: "Poppins",
        fontWeight: "normal",
        color: "#000",
        rich: {
          backgroundColor: "red",
        },
      },
    },

    series: [
      {
        name: "Porcentaje",
        type: "pie",
        center: ["20%", "50%"],
        radius: ["50%", "70%"],
        avoidLabelOverlap: false,
        label: {
          show: false,
          position: "center",
        },
        emphasis: {
          label: {
            show: true,
            fontSize: "30",
            fontWeight: "bold",
          },
        },
        labelLine: {
          show: false,
        },
        data: [
          { value: 50, name: "28 a 45 años", itemStyle: { color: "#4592FF" } }, // Azul
          { value: 30, name: "18 a 28 años", itemStyle: { color: "#FFA3AB" } }, // Rosa
          { value: 20, name: "45 a 55 años", itemStyle: { color: "#AC8EE3" } }, // Morado
        ],
      },
    ],
  };

  myChart.setOption(options);
</script>
